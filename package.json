{
  "name": "bdd-api-fwk",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js ./test/functional/features --require ./test/functional/steps/**/*.js",
    "report:open": "npx allure open ./reports/allure-report",
    "report:generate": "npx allure generate --clean ./reports/allure-results -o ./reports/allure-report",
    "archive:reports": "mkdir -p reports/archived-reports && tar -czf reports/archived-reports/iapf-report-$(date +\"%Y%m%d-%H%M%S\").tgz -C reports allure-report cucumber-report.html report.json || echo 'No report to archive'",
    "report": "npm run test || true && npm run report:generate && npm run report:open"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@faker-js/faker": "^10.0.0",
    "allure-commandline": "2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "chai": "^6.0.1",
    "dotenv": "^17.2.1",
    "joi": "^18.0.1",
    "k6": "^0.0.0",
    "k6-html-reporter": "^1.0.5",
    "log4js": "^6.9.1",
    "mocha": "^11.7.1",
    "supertest": "^7.1.4"
  }
}
